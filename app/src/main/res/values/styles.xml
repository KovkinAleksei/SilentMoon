<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AccentBlueButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoText">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoGrayText" parent="RobotoText">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="RobotoLinkText" parent="RobotoText">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="LogoText">
        <item name="android:fontFamily">@font/airbnb_cereal_bold</item>
        <item name="android:letterSpacing">0.24</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="placeholder_text">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="input_field" parent="placeholder_text">
        <item name="android:paddingStart">17dp</item>
        <item name="android:background">@drawable/rounded_shape_15</item>
        <item name="android:enabled">false</item>
        <item name="android:backgroundTint">@color/lighter_gray</item>
    </style>
</resources>