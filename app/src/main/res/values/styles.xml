<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Кнопки-->
    <style name="accent_blue_button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="card_light_button" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/almost_black</item>
    </style>

    <style name="card_dark_button" parent="card_light_button">
        <item name="backgroundTint">@color/almost_black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="gray_button" parent="accent_blue_button">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!--Основной шрифт приложения-->
    <style name="roboto_text">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="roboto_gray_text" parent="roboto_text">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="gray_subtitle" parent = "roboto_gray_text">
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="no_spacing_gray_text" parent = "roboto_gray_text">
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="roboto_link_text" parent="roboto_text">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="explore_app_text" parent="@style/roboto_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--Текст логотипа Silent Moon-->
    <style name="logo_text">
        <item name="android:fontFamily">@font/airbnb_cereal_bold</item>
        <item name="android:letterSpacing">0.24</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Поля ввода-->
    <style name="placeholder_text">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="input_field" parent="placeholder_text">
        <item name="android:paddingStart">17dp</item>
        <item name="android:background">@drawable/rounded_shape_15</item>
        <item name="android:enabled">false</item>
        <item name="android:backgroundTint">@color/gray_fill_color</item>
    </style>

    <style name="filled_input_text" parent="input_field">
        <item name="android:textColor">@color/almost_black</item>
    </style>

    <!--Заголовки экранов-->
    <style name="header_text">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="bigger_header_text" parent = "@style/header_text">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="smaller_header_text" parent = "@style/header_text">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="greeting_text" parent = "@style/bigger_header_text">
        <item name="android:textColor">@color/gold</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="helvetica_header">
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="helvetica_bold_header" parent="helvetica_header">
        <item name="fontFamily">@font/helvetica_neueue_bold</item>
    </style>

    <style name="helvetica_text" parent="helvetica_header">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="helvetica_gold_header" parent="helvetica_header">
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="helvetica_gold_text" parent="helvetica_gold_header">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="helvetica_gray_text" parent="helvetica_text">
        <item name="android:textColor">@color/light_gray</item>
    </style>


    <!--Шрифт часов-->
    <style name="time_picker_unselected">
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="time_picker_selected">
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:textColor">@color/time_picker_selected_color</item>
    </style>

    <!--Кнопка-текст-->
    <style name="textButton">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="roboto_white_text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="roboto_white_bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="roboto_gray_bold" parent="roboto_white_bold">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="roboto_medium_header">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="roboto_bold_title">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="nav_bar_selected">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="nav_bar_unselected" parent="nav_bar_selected">
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>